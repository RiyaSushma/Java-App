<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/senderTextSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/sender_shape"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:layout_toLeftOf="@+id/chatSenderProfileImage"
        android:fontFamily="@font/poppins_regular"
        android:padding="10dp"
        android:text="Doraemon"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatSenderProfileImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="14dp"
        android:layout_marginStart="-83dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/cameralogo"
        android:layout_alignParentRight="true" />

</RelativeLayout>