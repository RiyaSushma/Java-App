<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatReceiverProfileImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="14dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/cameralogo"
        />
    <TextView
        android:id="@+id/receiverTextSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="7dp"
        android:layout_toRightOf="@+id/chatReceiverProfileImage"
        android:fontFamily="@font/poppins_regular"
        android:padding="10dp"
        android:text="Doraemon"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/receiver_shape"
        />

</RelativeLayout>